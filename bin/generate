#!/usr/bin/env php

<?php
require_once __DIR__ . '/../vendor/autoload.php';

use Hamidrezaniazi\Pecs\Bin\Generator\ClassGenerator;
use function Hamidrezaniazi\Pecs\Bin\get_logger;

$logger = get_logger();

set_exception_handler(fn (Throwable $e) => $logger->error($e->getMessage()));

$logger->info(<<<LOGO
_________________________________
___  __ \__  ____/_  ____/_  ___/
__  /_/ /_  __/  _  /    _____ \
_  ____/_  /___  / /___  ____/ /
/_/     /_____/  \____/  /____/

LOGO. PHP_EOL . 'PHP Elastic Common Schema');

(new ClassGenerator($logger))->generate();
