{
    "name": "hamidrezaniazi/pecs",
    "description": "PHP ECS (Elastic Common Schema)",
    "keywords": [
        "hamidrezaniazi",
        "pecs",
        "ecs",
        "elastic",
        "Elastic Common Schema"
    ],
    "homepage": "https://github.com/hamidrezaniazi/pecs",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Hamidreza Niazi",
            "email": "hamidrezaniazi@yahoo.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/collections": "^9.0",
        "monolog/monolog": "^2.0",
        "nesbot/carbon": "^2.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.16",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Hamidrezaniazi\\Pecs\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hamidrezaniazi\\Pecs\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "phpstan": "./vendor/bin/phpstan analyse --memory-limit=1G"

    },
    "config": {
        "sort-packages": true
    }
}
